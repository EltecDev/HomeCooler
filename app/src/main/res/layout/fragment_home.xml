<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/round_corner_black"
        android:layout_marginHorizontal="25dp"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <TextView
            android:id="@+id/tvDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="15dp"
            android:fontFamily="@font/technology"
            android:text="-°"
            android:textColor="@color/white"
            android:textSize="95sp" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tvtitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivlogo"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="15dp"
        android:text="Aquí podrás seleccionar configuraciones rápidas de tu Home Cooler"
        android:textSize="15sp" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:visibility="visible"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/btnOnOff"
                        android:background="@drawable/round_corner_btnwhite"
                        android:src="@drawable/ic_baseline_power_settings_black"
                        android:layout_width="65dp"
                        android:layout_height="65dp"/>
                    <TextView
                        android:layout_gravity="center"
                        android:text="On/Off"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/btnRefresco"
                        android:background="@drawable/round_corner_btnwhite"
                        android:src="@drawable/ic_baseline_opacity_24"
                        android:layout_width="65dp"
                        android:layout_height="65dp"/>
                    <TextView
                        android:layout_gravity="center"
                        android:text="Refresco"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/btnCerveza"
                    android:background="@drawable/round_corner_btnwhite"
                    android:src="@drawable/ic_baseline_wine_bar_24"
                    android:layout_width="65dp"
                    android:layout_height="65dp"/>
                <TextView
                    android:layout_gravity="center"
                    android:text="Cerveza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/btnOnOffLampara"
                        android:background="@drawable/round_corner_btnwhite"
                        android:src="@drawable/ic_baseline_lightbulb_24"
                        android:layout_width="65dp"
                        android:layout_height="65dp"/>
                    <TextView
                        android:layout_gravity="center"
                        android:text="Lámpara"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:background="@drawable/round_corner_colorapp"
                        android:src="@drawable/ic_baseline_opacity_24"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>
                    <TextView
                        android:layout_gravity="center"
                        android:text="Refresco"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:background="@drawable/round_corner_colorapp"
                        android:src="@drawable/ic_baseline_wine_bar_24"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>
                    <TextView
                        android:layout_gravity="center"
                        android:text="Cerveza"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:background="@drawable/round_corner_colorapp"
                        android:src="@drawable/ic_baseline_adjust_24"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>
                    <TextView
                        android:layout_gravity="center"
                        android:text="Nivel 1-9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="25dp"
                android:text="Elije un color para tu Home Cooler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:visibility="visible"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </HorizontalScrollView>
                <Button
                    android:visibility="visible"
                    android:id="@+id/btnColorNegro"
                    android:layout_margin="5dp"
                    android:background="@drawable/round_corner_degradadocolores"
                    android:textColor="@color/white"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>
                <Button
                    android:textColor="@color/white"
                    android:id="@+id/btnColorRojo"
                    android:layout_margin="5dp"
                    android:background="@drawable/round_corner_red"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>
                <Button
                    android:textColor="@color/white"
                    android:id="@+id/btnColorAmarillo"
                    android:layout_margin="5dp"
                    android:background="@drawable/round_corner_yellow"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>
                <Button
                    android:textColor="@color/white"
                    android:id="@+id/btnColorVerde"
                    android:layout_margin="5dp"
                    android:background="@drawable/round_corner_green"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>
                <Button
                    android:textColor="@color/white"
                    android:id="@+id/btnColorAzul"
                    android:layout_margin="5dp"
                    android:background="@drawable/round_corner_blue"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>
                <Button
                    android:textColor="@color/white"
                    android:id="@+id/btnColorMorado"
                    android:layout_margin="5dp"
                    android:background="@drawable/round_corner_purple"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>
                <Button
                    android:textColor="@color/white"
                    android:id="@+id/btnColorAzulCeleste"
                    android:layout_margin="5dp"
                    android:background="@drawable/round_corner_cian"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>


            </LinearLayout>


            <TextView
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="15dp"
                android:text="Estado de la nevera"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:visibility="gone"
                android:textSize="20sp"
                android:id="@+id/tvTemperatura"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp"
                android:text="Temperatura:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="16sp"
                android:id="@+id/tvPuerta"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp"
                android:text="Puerta:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="16sp"
                android:id="@+id/tvVoltaje"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp"
                android:text="Voltaje:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnConnectHomeCooler"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginHorizontal="45dp"
                android:layout_marginVertical="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_corner_colorapp"
                android:text="Conectar con mi Home Cooler"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btndesconectar"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="45dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_corner_white"
                android:text="Desconectar"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18sp" />



        </LinearLayout>
    </ScrollView>



</LinearLayout>
